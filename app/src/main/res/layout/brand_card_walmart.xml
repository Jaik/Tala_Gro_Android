<!-- brand_coupon_card.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Image on the left -->
        <ImageView
            android:id="@+id/couponImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/walmart"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <!-- Text on the right -->
        <TextView
            android:id="@+id/walmartCouponDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get a Voucher Code of 100 for Shopping On Walmart"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/couponImageView"
            android:layout_toRightOf="@id/couponImageView"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
