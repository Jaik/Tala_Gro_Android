<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/couponImageView"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/walmart" />

        <TextView
            android:id="@+id/walmart_coupon_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/couponImageView"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/couponImageView"
            android:fontFamily="@font/lexend_semibold"
            android:text="500 Tala Coins"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/walmart_coupon_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/walmart_coupon_value_tv"
            android:layout_alignBottom="@+id/couponImageView"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/couponImageView"
            android:text="Get a voucher code of $100 for shopping on Walmart"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
